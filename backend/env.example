# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
# Local: mongodb://localhost:27017/eduguard
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/eduguard
MONGODB_URI=mongodb://localhost:27017/eduguard

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRE=7d

# Email Configuration (for password reset, approvals, and parent notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-gmail-app-password-here

# Twilio Configuration (for SMS notifications to parents)
# Get these from https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+250XXXXXXXXX

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info

# Background Jobs Configuration
ENABLE_BACKGROUND_JOBS=true
RISK_DETECTION_SCHEDULE=0 2 * * *
MESSAGE_PROCESSING_SCHEDULE=*/5 * * * *
